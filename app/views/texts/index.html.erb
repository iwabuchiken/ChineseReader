<h1>Listing texts</h1>

<table>
  <tr>
  	<th>Id</th>
  	<th>Title</th>
    <th>Text</th>
    <th>Url</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @texts.each do |text| %>
  <tr>
  	<td><%= text.id %></td>
  	<td><%= text.title %></td>
    <td><%= text.text[0..10] %></td>
    <td><%= text.url %></td>
    <td><%= text.genre %></td>
    <td><%= link_to 'Show', text %></td>
    <td><%= link_to 'Edit', edit_text_path(text) %></td>
    <td><%= link_to 'Destroy', text, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

