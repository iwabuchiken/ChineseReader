<% if @word_set_special != nil \
		and  @word_set_special.first() != nil

%>
	<table>
		<tr>
			<td>Text id</td>
			<td><%= @word_set_special.first().text_id %></td>
		</tr>
		<tr>
			<td>Title</td>
			<td><a href="<%= @word_set_special.first().text.url %>">
				<%= @word_set_special.first().text.title %></a></td>
		</tr>
	</table>
	
	<br/>
	
	<table>
	  <tr>
	  	<th>Id</th>
	    <th>Ch</th>
	    <th>Pin</th>
	    <th>Jp</th>
	    <th></th>
	    
	  </tr>
	
	
	<% @word_set_special.each do |word_set| %>
	  <tr>
	  	<td class="id"><%= word_set.id %></td>
	    <td class="words"><%= word_set.ch %></td>
	    <td class="words"><%= word_set.pin %></td>
	    <td  class="words"><%= word_set.jp %></td>
	    <td><%= link_to 'Show', word_set %></td>
	    
	  </tr>
	<% end %>
	</table>

<% else %>
	<table>
		<tr>
			<td>Text id</td>
			<td><%= @params %></td>
		</tr>
		<tr>
			<td>Title</td>
			<td><%= @texts %></td>
		</tr>
	</table>
	<br/>
	No word set found for this text.
<% end %>

